<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="U4_Topicos_Actividad_1.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:U4_Topicos_Actividad_1"
    xmlns:views="clr-namespace:U4_Topicos_Actividad_1.Views"
    xmlns:viewmodel="clr-namespace:U4_Topicos_Actividad_1.ViewModels"
    Shell.FlyoutBehavior="Disabled"
    Title="U4_Topicos_Actividad_1">
    <Shell.BindingContext>
        <viewmodel:HorarioViewModel></viewmodel:HorarioViewModel>
    </Shell.BindingContext>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:InicioView}"
        Route="MainPage" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:EditarActividadView}"
        Route="EditarActividad" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:EditarClaseView}"
        Route="EditarClase" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:AgregarActividadView}"
        Route="AgregarActividad" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:AgregarClaseView}"
        Route="AgregarClase" />

</Shell>
